<div class="hero min-h-screen" style="background-image: url(/images/street.jpg);">
    <div class="hero-overlay bg-opacity-20"></div>
        <div class="hero-content flex-col lg:flex-row-reverse">
          <div class="card flex-shrink-0 w-full shadow-2xl bg-base-200">
            <div class="card-body">
              <h1 class="lock uppercase tracking-wide text-gray-900 text-2xl font-bold mb-2 mx-auto">create your review</h1>
              
              </div>
            <div class="card-body">
              <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
                <div class="alert alert-danger"><%= el.msg %></div>
                <% }) %> <% } %> <% if (locals.messages.info) { %> <%
                messages.info.forEach( el => { %>
                <div class="alert alert-info"><%= el.msg %></div>
                <% }) %> <% } %>
<form class="w-full max-w-lg mx-auto" action="/reviews/createReview" enctype="multipart/form-data" method="POST">
  <div class="flex flex-wrap -mx-3 mb-6">
    <!-- street name -->
    <div class="w-full md:w-2/3 px-3 mb-6 md:mb-0">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-property-address">
        Street name and number
      </label>
      <input type="text" placeholder="Type here" class="input input-bordered input-primary w-full" id="streetName" name="streetName"/>
    </div>
    <!-- postcode -->
    <div class="w-full md:w-1/3 px-3">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-property-address">
        Postcode
      </label>
      <input type="text" placeholder="Type here" class="input input-bordered input-primary w-full" id="postcode" name="postcode"/>
    </div>
  </div>
  <!-- tenancy to and from -->
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-tenancy-from">
        Tenancy from
      </label>
      <input type="date" placeholder="Type here" class="input input-bordered input-primary w-full" id="tenancyFrom" name="tenancyFrom"/>
    </div>
    <div class="w-full md:w-1/2 px-3">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-tenancy-to">
        Tenancy to
      </label>
      <input type="date" placeholder="Type here" class="input input-bordered input-primary w-full" id="tenancyTo" name="tenancyTo"/>
    </div>
  </div>
  <!-- review title -->
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="title">
        Review title
      </label>
      <input type="text" placeholder="Type here" class="input input-bordered input-primary w-full form-control" id="title" name="title"/>
    </div>
  </div>
  <!-- review body -->
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="body">
        Review body
      </label>
      <textarea id="message" rows="4" placeholder="Type here" class="textarea input-bordered input-primary w-full form-control " id="body" name="body"></textarea>
    </div>
  </div>
  <!-- img upload -->
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <div class="mb-3">
        <label for="imgUpload" class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Image</label>
        <input type="file" class="form-control" id="imageUpload" name="file">
      </div>
    </div>
  </div>
  <!-- submit -->
  <div class="flex flex-wrap -mx-3 my-6">
    <div class="w-full px-3">
    <button type="submit" class="btn btn-primary w-full" value="Upload">Submit</button>
  </div>
</div>
</form>
</div>
</div>
</div>
</div>
</div>

