<%- include('partials/header') -%>

<div class="container mx-auto">
<form class="w-full max-w-lg mx-auto" action="/reviews/createReview" method="POST">
  <div class="flex  -mx-3 mb-6 justify-center">
    <div class="w-full px-3">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-property-address">
        Property address
      </label>
      <input type="text" placeholder="Type here" class="input input-bordered input-primary w-full form-control" id="address" name="address"/>
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-tenancy-from">
        Tenancy from
      </label>
      <input type="date" placeholder="Type here" class="input input-bordered input-primary w-full" id="tenancyFrom" name="tenancyFrom"/>
    </div>
    <div class="w-full md:w-1/2 px-3">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-tenancy-to">
        Tenancy to
      </label>
      <input type="date" placeholder="Type here" class="input input-bordered input-primary w-full" id="tenancyTo" name="tenancyTo"/>
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="title">
        Review title
      </label>
      <input type="text" placeholder="Type here" class="input input-bordered input-primary w-full form-control" id="title" name="title"/>
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="body">
        Review body
      </label>
      <input type="text" placeholder="Type here" class="input input-bordered input-primary w-full form-control " id="body" name="body" />
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
    <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
  </div>
</div>
</form>
</div>


<%- include('partials/footer') -%>
