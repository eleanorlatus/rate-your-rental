<%- include('partials/header') -%>
<div class="container mx-auto px-20 py-5">
<!-- header -->
<div> <!-- whole property div-->
    <div>
        <h1 class="text-2xl font-bold"> <%= property.streetName%>, <%= property.postcode.toUpperCase()%></h1>
    </div>
<!-- images in grid-->

<div class="flex md:flex-row sm:flex-col justify-evenly py-4 border-2 border-amber-600 my-4 gap-6">
  <% for(var i=0; i<review.length; i++) {%>
    <!-- image -->
    <% if(review[i].image) {%>
    <div class="sm:mx-4 md:mx-0">
      <img src="<%= review[i].image%>">
      <span class="mx-4">Image posted by <%= user.userName%></span>
  </div>
  <% } %>
  <% } %>
</div>
<!-- review -->
<% for(var i=0; i<review.length; i++) {%>
<div class="border-2 border-amber-600 px-8 py-4 my-4"> <!-- outer review div-->
    <div class="pb-2"> <!-- posted by and tenancy dates-->
        <p>Review posted by <%= user.userName%></p>
        <% if(review[i].tenancyFrom && review[i].tenancyTo != "") {%>
          <p>Tenancy from <%= review[i].tenancyFrom%> to <%= review[i].tenancyTo%></p>
        <% } %>
        <!--<img src="<%= review[i].image%>">-->
    </div>
    <div> <!-- review title and body-->
        <h1 class="text-2xl font-bold pb-2"><%= review[i].title%></h1>
        <p class="pt-2"><%= review[i].body%></p>
    </div>
</div>
<% } %>
</div>
</div>
<%- include('partials/footer') -%>