<!DOCTYPE html>
<html lang="en" data-theme="bumblebee">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Rate your rental</title>
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/imgs/favicon-32x32.png"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous"
    />
    <script src="https://kit.fontawesome.com/6528dd7a8c.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/style.css">
  </head>

  
  <body class="bg-base-200">
  <!--medium / large navbar -->
    <div class="bg-base-300 py-4 px-4 hidden md:navbar 2xl:text-xl">
      <div class="flex-1">
        <a class="btn btn-primary normal-case text-xl" href="/">Rate your rental</a>
      </div>
        <!-- navigation -->
        <div class="">
          <div class="flex-none">
        <ul class="menu menu-horizontal px-1">
          <li class="mx-1"><a href="/feed">Feed</a></li>
          <% if(loggedInUser != undefined){ %>
          <li class="mx-1"><a href="/reviews">Create review</a></li>
          <li class="mx-1"><a href="/profile/edit">Edit profile</a></li>
          <% } %>
          <!-- show if not logged in -->
          <% if(loggedInUser == undefined){ %>          
          <li class="mx-1"><a href="/signup">Sign up</a></li>
          <li class="mx-1"><a href="/login">Log in</a></li>
          <% } else{ %> 
          <!-- show if logged in -->
          <li class="mx-1"><a href="/logout">Log out</a></li>
          <% } %>
        </ul>
          </div>
        </div>
      <!-- search bar (only on lg)-->
      <div class="flex-none hidden lg:block">
          <div class="form bg-base-300 mr-1">
            <form class="search--form" action="/property/search/property" method="GET">
              <input
                  class="input input-bordered"
                  type="text"
                  name="property"
                  placeholder="Search"
              >
              <button class="search--btn" type="submit">
                  <i class="search--icon fa-solid fa-magnifying-glass"></i>
              </button>
          </form>
          </div>
      </div>
      <!-- avatar-->
      <div class="">
        <label tabindex="0" class="btn btn-secondary btn-circle avatar mx-2">
          <div class="w-10 rounded-full">
            <% if(loggedInUser == undefined){ %>    
            <a href="/"><img src="/images/stock/house-icon.png" /></a>
            <% } else{ %> 
              <a href="/profile/<%= loggedInUser.userName%>"><img src="<%= loggedInUser.profilePhoto %>" /></a>
            <% } %>
          </div>
        </label>
        </div>
</div>

<!-- small and mobile nav bar -->
<div class="bg-base-300 py-4 px-4 navbar md:hidden">
  <div class="flex-1">
    <a class="btn btn-primary normal-case text-xl" href="/">Rate your rental</a>
  </div>
  <div class="dropdown dropdown-end">
    <ul tabindex="0" class="mt-3 p-2 shadow menu menu-compact dropdown-content bg-base-100 rounded-box w-52">
        
        <!-- dropdown if not logged in -->
        <% if(loggedInUser == undefined){ %>          
          <li class="mx-1">
            <form class="search--form" action="/property/search/property" method="GET">
              <input
                  class="border-b-1"
                  type="text"
                  name="property"
                  placeholder="Search"
              />
          </form></li>
          <li class="mx-1"><a href="/signup">Sign up</a></li>
        <li class="mx-1"><a href="/login">Log in</a></li>
        <% } else{ %> 
        <!-- dropdown if logged in -->
        <li class="mx-1">
          <form class="search--form" action="/property/search/property" method="GET">
            <input
                class="border-b-1"
                type="text"
                name="property"
                placeholder="Search"
            />
        </form></li>
        <li class="mx-1"><a href="/feed">Feed</a></li>
        <li class="mx-1"><a href="/reviews">Create review</a></li>
        <li class="mx-1"><a href="/profile/<%= loggedInUser.userName%>">Profile</a></li>
        <li class="mx-1"><a href="/profile/edit">Edit profile</a></li>
        <li class="mx-1"><a href="/logout">Log out</a></li>
        <% } %>
      </ul>
      <div class="">
        <label tabindex="0" class="btn btn-secondary btn-circle avatar mx-2">
          <div class="w-10 rounded-full">
            <% if(loggedInUser == undefined){ %>
            <img src="/images/stock/house-icon.png" />
            <% } else{ %> 
              <img src="<%= loggedInUser.profilePhoto %>" />
            <% } %>
          </div>
        </label>
        </div>
  </div>
</div>