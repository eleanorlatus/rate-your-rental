<!DOCTYPE html>
<html lang="en" data-theme="bumblebee">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Rate your rental</title>
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/imgs/favicon-32x32.png"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous"
    />
    <script src="https://kit.fontawesome.com/6528dd7a8c.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body class="bg-base-200">
        <!-- navbar -->
    <div class="navbar bg-base-300 py-4 px-4">
      <div class="flex-1">
        <a class="btn btn-primary normal-case text-xl" href="/">Rate your rental</a>
      </div>
        <!-- navigation -->
        <div class="hidden lg:block">
          <div class="flex-none">
        <ul class="menu menu-horizontal px-1">
          <li class="mx-1"><a href="/feed">Feed</a></li>
          <li class="mx-1"><a href="/reviews">Create review</a></li>
          <!-- hide if logged in -->
          <% if(user == undefined){ %>          
          <li class="mx-1"><a href="/signup">Sign up</a></li>
          <li class="mx-1"><a href="/login">Log in</a></li>
          <% } else{ %> 
          <!-- hide if not logged in -->
          <li class="mx-1"><a href="/logout">Log out</a></li>
          <% } %>
        </ul>
          </div>
        </div>
      <!-- search bar -->
      <div class="flex-none">
        <div class="">
          <div class="form bg-base-300 mr-1">
            <input type="text" placeholder="Search" class="input input-bordered" />
          </div>
        </div>
      </div>
      <!-- avatar, show only on md and above-->
      <div class="hidden lg:block">
        <label tabindex="0" class="btn btn-secondary btn-circle avatar mx-2">
          <div class="w-10 rounded-full">
            <a href="/profile"><img src="<%= user.profilePhoto %>" /></a>
          </div>
        </label>
        </div>
      <!-- responsive nav, show only below md -->
    <div class="lg:hidden sm:block">
      <div class="dropdown dropdown-end">
        <label tabindex="0" class="btn btn-secondary btn-circle avatar mx-2">
          <div class="w-10 rounded-full">
           <img src="<%= user.profilePhoto %>"/>
          </div>
        </label>
        <ul tabindex="0" class="mt-3 p-2 shadow menu menu-compact dropdown-content bg-base-100 rounded-box w-52">
            <li class="mx-1"><a href="/profile">Profile</a></li>
            <li class="mx-1"><a href="/feed">Feed</a></li>
            <li class="mx-1"><a href="/reviews">Create review</a></li>
            <!-- hide if logged in -->
            <% if(user == undefined){ %>          
            <li class="mx-1"><a href="/signup">Sign up</a></li>
            <li class="mx-1"><a href="/login">Log in</a></li>
            <% } else{ %> 
            <!-- hide if not logged in -->
            <li class="mx-1"><a href="/logout">Log out</a></li>
            <% } %>
          </ul>
      </div>
    </div>
      
    </div>
